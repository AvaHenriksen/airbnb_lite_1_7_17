<div class="page-header">
  <h1>
    Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "reviews_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

<div class="form-group">
  <%= f.label :value, "Value" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :value_gteq, :class => "form-control", :placeholder => "Value greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :value_lteq, :class => "form-control", :placeholder => "Value less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :check_in_15_cont, "Check in 15 contains" %>
    <%= f.text_field :check_in_15_cont, :class => "form-control", :placeholder => "Check in 15 contains" %>
  </div>

<div class="form-group">
  <%= f.label :location, "Location" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :location_gteq, :class => "form-control", :placeholder => "Location greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :location_lteq, :class => "form-control", :placeholder => "Location less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :cleanliness, "Cleanliness" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :cleanliness_gteq, :class => "form-control", :placeholder => "Cleanliness greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :cleanliness_lteq, :class => "form-control", :placeholder => "Cleanliness less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :communication, "Communication" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :communication_gteq, :class => "form-control", :placeholder => "Communication greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :communication_lteq, :class => "form-control", :placeholder => "Communication less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :accuracy, "Accuracy" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :accuracy_gteq, :class => "form-control", :placeholder => "Accuracy greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :accuracy_lteq, :class => "form-control", :placeholder => "Accuracy less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :listing_title_cont, "Listing title contains" %>
      <%= f.text_field :listing_title_cont, :class => "form-control", :placeholder => "Listing title contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Guest Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='guestgteqcreated_atPicker'>
                  <%= f.text_field :guest_created_at_gteq, :class => "form-control", :placeholder => "Guest Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='guestlteqcreated_atPicker'>
                  <%= f.text_field :guest_created_at_lteq, :class => "form-control", :placeholder => "Guest Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#guestgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#guestlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#guestgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#guestlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#guestlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#guestgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/reviews" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#reviews_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Listing</th>
        <th>Guest</th>
        <th>Accuracy</th>
        <th>Communication</th>
        <th>Cleanliness</th>
        <th>Location</th>
        <th>Check in 15</th>
        <th>Value</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.listing.present? %>
            <a href="/listings/<%= review.listing.id %>">
              <%= review.listing.title %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.guest.present? %>
            <a href="/guests/<%= review.guest.id %>">
              <%= review.guest.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= review.accuracy %></td>
        <td><%= review.communication %></td>
        <td><%= review.cleanliness %></td>
        <td><%= review.location %></td>
        <td><%= review.check_in_15 %></td>
        <td><%= review.value %></td>
        <td><%= review.body %></td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
