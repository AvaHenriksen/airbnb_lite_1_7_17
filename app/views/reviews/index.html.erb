<div class="page-header">
  <h1>
    Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Listing</th>
        <th>Guest</th>
        <th>Accuracy</th>
        <th>Communication</th>
        <th>Cleanliness</th>
        <th>Location</th>
        <th>Check in 15</th>
        <th>Value</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.listing.present? %>
            <a href="/listings/<%= review.listing.id %>">
              <%= review.listing.title %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.guest.present? %>
            <a href="/guests/<%= review.guest.id %>">
              <%= review.guest.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= review.accuracy %></td>
        <td><%= review.communication %></td>
        <td><%= review.cleanliness %></td>
        <td><%= review.location %></td>
        <td><%= review.check_in_15 %></td>
        <td><%= review.value %></td>
        <td><%= review.body %></td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
