<div class="page-header">
  <h1>
    Guestratings
    <a href="/guestratings/new" class="btn btn-lg btn-success">New Guestrating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Host</th>
        <th>Guest</th>
        <th>Booking</th>
        <th>Body</th>
        <th>Rating</th>
        <th>Actions</th>
      </tr>

      <% @guestratings.each do |guestrating| %>
      <tr>
        <td>
          <% if guestrating.host.present? %>
            <a href="/hosts/<%= guestrating.host.id %>">
              <%= guestrating.host.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if guestrating.guest.present? %>
            <a href="/guests/<%= guestrating.guest.id %>">
              <%= guestrating.guest.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if guestrating.booking.present? %>
            <a href="/bookings/<%= guestrating.booking.id %>">
              <%= guestrating.booking.guest_id %>
            </a>
          <% end %>
        </td>
        <td><%= guestrating.body %></td>
        <td><%= guestrating.rating %></td>
        <td>
          <a href="/guestratings/<%= guestrating.id %>" class="btn btn-primary">Show</a>
          <a href="/guestratings/<%= guestrating.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_guestrating/<%= guestrating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @guestratings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
