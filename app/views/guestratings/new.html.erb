<!-- Validation failure messages -->
<% if @guestrating.errors.any? %>
  <% @guestrating.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Guestrating</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_guestrating" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for host_id -->
      <div class="form-group">
        <label for="host_id" class="control-label">
          Host
        </label>

        <%= select_tag(:host_id, options_from_collection_for_select(Host.all, :id, :email, @guestrating.host_id), :class => "form-control") %>
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <%= select_tag(:guest_id, options_from_collection_for_select(Guest.all, :id, :created_at, @guestrating.guest_id), :class => "form-control") %>
      </div>

      <!-- Label and input for booking_id -->
      <div class="form-group">
        <label for="booking_id" class="control-label">
          Booking
        </label>

        <input type="text" id="booking_id" name="booking_id" placeholder="Booking" class="form-control" value="<%= @guestrating.booking_id %>">
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @guestrating.body %></textarea>
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @guestrating.rating %>">
      </div>

      <button class="btn btn-success">
        Create Guestrating
      </button>
      or
      <a href="/guestratings">Cancel</a>
    </form>
  </div>
</div>
